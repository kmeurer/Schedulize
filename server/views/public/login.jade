extends layout
block content
  br
  br
  div.container
    div.col-md-6.authContainer.col-md-offset-3
      h2 Login
      br
      form(action="/login" method="POST")
        div.inputs
          input.form-control.floating-label(type="email" name="email" placeholder="Email")
          br
          input.form-control.floating-label(type="password" name="password" placeholder="Password")
          if error
            br
            div.alert.alert-dismissable.alert-danger
              button.close(type="button" data-dismiss="alert") Ã—
              p(style="color: white")
                strong #{error}
                br
                | Don't have an account?    
                a.alert-link(href="/signup") Sign up here
          input.btn.btn-default.btn-lg.btn-block.btn-success(type="submit" value="Login")
  script(type="text/javascript").
      $.material.init();